<Window x:Class="TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp"
        mc:Ignorable="d"
        Title="Todo App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as..."/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="New Task" Margin="20,10" Click="ButtonNewTask_Click"/>
                <Button Content="New Task Group" Margin="20,10" Click="ButtonNewTaskGroup_Click"/>
                <Button Content="Button" Margin="20,10"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" x:Name="groupList" Margin="5,5,5,5" HorizontalContentAlignment="Stretch" ScrollViewer.CanContentScroll="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" MouseLeftButtonDown="GroupGrid_MouseDown" Background="Transparent" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50*"/>
                                <RowDefinition Height="50*"/>
                            </Grid.RowDefinitions>
                            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="X" Margin="0,0,5,0" Padding="6,3" Click="ButtonDeleteGroup_Click"/>
                            <TextBox Text="{Binding Title, Mode=TwoWay}" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" BorderThickness="0" Background="Transparent"/>
                            <ListBox HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Grid.Row="1" x:Name="taskList" Margin="5,5,5,5" ItemsSource="{Binding Tasks}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,5,5,5" MouseLeftButtonDown="TaskGrid_MouseDown" Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150*"/>
                                                <ColumnDefinition Width="150*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="75*"/>
                                                <RowDefinition Height="75*"/>
                                            </Grid.RowDefinitions>
                                            <Button Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" Content="X" Margin="0,0,0,0" Padding="6,3" Click="ButtonDeleteTask_Click"/>
                                            <TextBlock Text="{Binding Title}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DueDate, StringFormat=d}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Status}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Column="1">
                <Label Content="Edit selected task:" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="titleTextBox" Margin="10" TextWrapping="Wrap"/>
                <TextBox x:Name="descTextBox" Margin="10" Height="125" TextWrapping="Wrap"/>
                <DatePicker x:Name="dueDatePicker" Margin="10"/>
                <ComboBox x:Name="statusComboBox" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
